<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h2>nueva nota</h2>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="titulo" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="descripcion"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>